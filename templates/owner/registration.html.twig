{% extends 'site/partials/base.html.twig' %}

{% block title %}Devenir partenaire - Deliveroo_like{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('site/css/registration.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12 registration">
            <h3 class="text-center mb-5">Devenir partenaire</h3>
            {{ form_start(form) }}

            {{ form_row(form.profile) }}
            {{ form_row(form.restaurant) }}
            {{ form_row(form.name) }}
            {{ form_row(form.city) }}
            {{ form_row(form.line1) }}
            {{ form_row(form.line2) }}

            <div class="text-center">
                <button type="submit" class="btn btn-blue">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

